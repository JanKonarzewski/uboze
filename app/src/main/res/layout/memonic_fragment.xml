<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
        android:layout_width="match_parent">


    <EditText
            android:layout_width="241dp"
            android:layout_height="66dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/search_text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
    <Button
            android:text="memo"
            android:layout_width="84dp"
            android:layout_height="66dp" android:id="@+id/search_button"
            app:layout_constraintStart_toEndOf="@+id/search_text"
            android:layout_marginStart="20dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/search_result"/>
    <TextView
            android:layout_width="355dp"
            android:layout_height="580dp" android:id="@+id/search_result"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/search_text" android:layout_marginStart="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
